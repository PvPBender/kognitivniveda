---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Události | Společnost pro kognitivní vědu">
	<main>
		<h1>Naše <span class="text-gradient">události</span></h1>
		<div class="content">
			<p class="coming-soon">Obsah se připravuje...</p>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: 6rem auto 2rem;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 3rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.content {
		background: rgba(var(--accent-dark), 0.2);
		border: 1px solid rgba(var(--accent-light), 0.2);
		border-radius: 12px;
		padding: 2rem;
		text-align: center;
	}
	.coming-soon {
		color: rgba(255, 255, 255, 0.8);
		font-style: italic;
	}
</style>
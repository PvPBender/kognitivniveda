---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Členové | Společnost pro kognitivní vědu">
	<main>
		<h1>Členové <span class="text-gradient">společnosti</span></h1>
		<div class="content">
			<section>
				<h2>Předsednictvo</h2>
				<div class="member-list">
					<div class="member president">
						<h3>Předsedkyně</h3>
						<p>Karin Zamrazilová</p>
					</div>
					<div class="member">
						<p>Peter Guba</p>
					</div>
					<div class="member">
						<p>Jakub Landsperský</p>
					</div>
					<div class="member">
						<p>Elliška Pelclová</p>
					</div>
					<div class="member">
						<p>Jan Škrabálek</p>
					</div>
				</div>
			</section>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: 6rem auto 2rem;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 3rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.content {
		background: rgba(var(--accent-dark), 0.2);
		border: 1px solid rgba(var(--accent-light), 0.2);
		border-radius: 12px;
		padding: 2rem;
	}
	section {
		margin-bottom: 2rem;
	}
	h2 {
		color: rgb(var(--accent-light));
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
		text-align: center;
	}
	h3 {
		color: rgb(var(--accent-light));
		font-size: 1.2rem;
		margin-bottom: 0.5rem;
	}
	.member-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
	}
	.member {
		text-align: center;
		padding: 0.5rem;
	}
	.member p {
		margin: 0;
	}
	.president {
		margin-bottom: 1.5rem;
	}
</style>